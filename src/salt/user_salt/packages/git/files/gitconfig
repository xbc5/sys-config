[merge]
  tool = kdiff3
[mergetool "kdiff3"]
  trustExitCode = true

[gpg]
  program = gpg
[core]
  editor = nvim
[color]
  ui = auto

[diff]
  tool = kitty
  guitool = kitty.gui
[difftool]
  prompt = false
  trustExitCode = true
[difftool "kitty"]
  cmd = kitty +kitten diff $LOCAL $REMOTE
[difftool "kitty.gui"]
  cmd = kitty kitty +kitten diff $LOCAL $REMOTE
